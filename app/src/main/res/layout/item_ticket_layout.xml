<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:onClick="collapseTable"
    android:layout_margin="2dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f2f3f4">

        <ScrollView
            android:id="@+id/layout"
            android:layout_height="match_parent"
            android:scrollbars="horizontal|vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="5dip"
            android:scrollbarStyle="outsideInset"
            android:fillViewport="true">

            <HorizontalScrollView
                android:id="@+id/horizontalView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:scrollbars="horizontal|vertical">


                <TableLayout
                    android:id="@+id/table_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0,1,2,3,4"
                    >

                    <TableRow>


                        <TextView
                            android:id="@+id/textTicketNumber"
                            style="@style/Base.TextAppearance.AppCompat.Title"
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="#fff"
                            android:padding="1dp"
                            android:layout_weight="1"
                            android:text="@string/app_name"
                            android:textColor="#ba160c"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textOwnerGroup"
                            style="@style/Base.TextAppearance.AppCompat.Title"
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="#fff"
                            android:padding="1dp"
                            android:text="@string/app_name"
                            android:layout_weight="1"
                            android:textColor="#9d3221"
                            android:textSize="14dp" />

                        <TextView
                        android:id="@+id/textOwnerName"
                        style="@style/Base.TextAppearance.AppCompat.Title"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#fff"
                        android:padding="1dp"
                        android:layout_weight="1"
                        android:text="@string/app_name"
                        android:hint="Owner Name"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="14dp" />


                        <TextView
                            android:id="@+id/textSeverty"
                            style="@style/Base.TextAppearance.AppCompat.Title"
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="#fff"
                            android:padding="1dp"
                            android:layout_weight="1"
                            android:text="@string/app_name"
                            android:textColor="#d92121"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/textTicketSummary"
                            style="@style/Base.TextAppearance.AppCompat.Title"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="#fff"
                            android:padding="1dp"
                            android:layout_weight="1"
                            android:text="@string/app_name"
                            android:textColor="#000000"
                            android:textSize="12dp" />

                    </TableRow>

                </TableLayout>

            </HorizontalScrollView>
        </ScrollView>
    </LinearLayout>

</android.support.v7.widget.CardView>